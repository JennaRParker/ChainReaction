<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chain Reaction</title>
</head>

<body>
    <div class="navbar">
        <nav>
            <!-- Login Here. Once Logged in, Add a restaurant -->
            <a href="/chainreaction/newchain">Add a Chain</a>
        </nav>
        <h1>Chain Reaction</h1>
    </div>
    <!-- <h3> Catchy SubTitle </h3> -->
    <ul class="allofthechains">
        <% chains.forEach(chain => { %>
        <li>
            <a href="/chainreaction/<%=chain._id; %>">
            <img src=<%=chain.logo %> width=230px height=230px>
            </a>
            <button>
                <a href="/chainreaction/<%=chain._id %>/edit">Edit</a>
            </button>
            <form action="/chainreaction/<%=chain._id %>?_method=DELETE" method="POST">
            <input class="delete" type="submit" value="Delete" />
            </form>
            <script>
                document.getElementsByClassName("delete").addEventListener("submit", function(event) {
                    event.preventDefault(); 
                    })
            </script>
        <% }) %>
      </li>
            
    </ul>
</body>

</html>